{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "ms-commons/*": [
        "../__commons__/src/*"
      ]
    },
    "rootDirs": [
      "./src/",
      "../__commons__/src"
    ],
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "__tests__"
  ]
}